---
import { Icon } from 'astro-icon/components'

const navItems = [
  { label: "El Debate", href: "/" },
  { label: "Letra", href: "/letra/" },
  { label: "¡Queremos Pastel!", href: "/queremos-pastel/" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 px-4 py-6">
  <nav
    class="max-w-4xl mx-auto bg-white/60 backdrop-blur-md border border-white/40 rounded-3xl px-8 py-4 shadow-xl shadow-pink-200/20 flex items-center justify-between"
  >
    <a
      href="/"
      class="text-2xl font-black text-slate-900 flex items-center gap-2"
    >
      <Icon name="noto:birthday-cake" class="w-8 h-8" />
      <span class="hidden sm:inline">Las Mañanitas</span>
    </a>

    <ul class="flex items-center gap-6 sm:gap-10">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-lg font-black text-slate-600 hover:text-pink-600 transition-colors duration-300 tracking-tight"
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<!-- Spacer to prevent content from being hidden under the fixed header -->
<div class="h-28"></div>

<style>
  @keyframes music-bar {
    0%,
    100% {
      transform: scaleY(0.5);
    }
    50% {
      transform: scaleY(1);
    }
  }
  .animate-music-bar {
    transform-origin: bottom;
    animation: music-bar 1.5s ease-in-out infinite;
  }

  @keyframes float-music-1 {
    0% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0;
    }
    50% {
      opacity: 0.8;
    }
    100% {
      transform: translate(-20px, -40px) rotate(-20deg);
      opacity: 0;
    }
  }
  @keyframes float-music-2 {
    0% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0;
    }
    50% {
      opacity: 0.8;
    }
    100% {
      transform: translate(20px, -40px) rotate(20deg);
      opacity: 0;
    }
  }
  .animate-float-music-1 {
    animation: float-music-1 4s infinite linear;
  }
  .animate-float-music-2 {
    animation: float-music-2 3.5s infinite linear;
    animation-delay: 1s;
  }

  @keyframes text-pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }
  .animate-text-pulse {
    display: inline-block;
    animation: text-pulse 2s ease-in-out infinite;
  }
</style>

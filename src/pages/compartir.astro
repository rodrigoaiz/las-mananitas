<script>
  const shareData = {
    title: "Las Ma√±anitas - El Debate Definitivo",
    text: '¬ø"D√≠a de tu santo" o "tu cumplea√±os"? Entra y vota por tu versi√≥n favorita de Las Ma√±anitas. üéÇüá≤üáΩ',
    url: window.location.origin,
  };

  // --- Social Links ---
  document.getElementById("share-twitter")?.addEventListener("click", () => {
    const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareData.text)}&url=${encodeURIComponent(shareData.url)}`;
    window.open(url, "_blank");
  });

  document.getElementById("share-whatsapp")?.addEventListener("click", () => {
    const url = `https://api.whatsapp.com/send?text=${encodeURIComponent(shareData.text + " " + shareData.url)}`;
    window.open(url, "_blank");
  });

  document.getElementById("share-facebook")?.addEventListener("click", () => {
    const url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareData.url)}`;
    window.open(url, "_blank");
  });

  // --- Copy Link ---
  const copyBtn = document.getElementById("share-copy");
  const successOverlay = document.getElementById("copy-success");

  copyBtn?.addEventListener("click", async () => {
    try {
      await navigator.clipboard.writeText(shareData.url);

      // Show feedback
      if (successOverlay) {
        successOverlay.style.opacity = "1";
        setTimeout(() => {
          successOverlay.style.opacity = "0";
        }, 2000);
      }
    } catch (err) {
      console.error("Error al copiar:", err);
    }
  });
</script>
